<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:background="@drawable/registration"
                android:layout_height="fill_parent" >

    <Button
            android:id="@+id/btn_OkSex"
            android:background="@android:color/transparent"
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_x="170px" android:layout_y="560px"/>
    <Spinner
            android:layout_width="250px"
            android:layout_height="50px"
            android:id="@+id/spinnerSex" android:layout_x="125px" android:layout_y="460px"
            android:spinnerMode="dialog" android:background="@android:color/darker_gray"/>

    <TextView
            android:layout_width="200px"
            android:layout_height="40px"
            android:text="Jenis Kelamin"
            android:id="@+id/txtTitleSex" android:layout_x="150px" android:layout_y="420px"
            android:textAlignment="center" android:textColor="@android:color/black" android:textSize="30px"
            android:textStyle="bold"/>

</AbsoluteLayout>