<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:background="@drawable/registration"
                android:layout_height="fill_parent" >
    <TextView
            android:layout_width="240px"
            android:layout_height="40px"
            android:text="Nomor Telepon:"
            android:id="@+id/txtTitlePhone" android:layout_x="130px" android:layout_y="430px"
            android:textAlignment="center" android:textColor="@android:color/black" android:textSize="30px"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="290px"
            android:layout_height="40px"

            android:inputType="phone"
            android:ems="10"
            android:textCursorDrawable="@null"
            android:id="@+id/txtPhone" android:background="@android:color/darker_gray"
            android:textStyle="bold" android:textColor="#000000"
            android:layout_x="100px" android:layout_y="475px"
            android:singleLine="true" android:gravity="center"/>
    <Button
            android:id="@+id/btn_OkPhone"
            android:background="@android:color/transparent"
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_x="170px" android:layout_y="560px"/>

</AbsoluteLayout>