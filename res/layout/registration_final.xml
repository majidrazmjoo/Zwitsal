<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="fill_parent"
                android:background="@drawable/edit_profile"
                android:layout_height="fill_parent" >
    <Button
            android:id="@+id/btn_Back"
            android:background="@android:color/transparent"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_x="0px" android:layout_y="0px"/>

    <EditText
            android:layout_width="220px"
            android:layout_height="30px"
            android:inputType="textPersonName"
            android:ems="10"
            android:textCursorDrawable="@null"
            android:id="@+id/txtNameProfile" android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_x="180px" android:layout_y="235px"
            android:singleLine="true" android:gravity="left"/>

    <EditText
            android:layout_width="220px"
            android:layout_height="30px"
            android:inputType="none"
            android:ems="10"
            android:textStyle="normal"
            android:textCursorDrawable="@null"
            android:id="@+id/txtDOBProfile" android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_x="180px" android:layout_y="278px"
            android:singleLine="true" android:gravity="left" android:clickable="true" android:editable="false"
            android:enabled="true"/>

    <EditText
            android:layout_width="220px"
            android:layout_height="30px"
            android:inputType="textPersonName"
            android:ems="10"
            android:textStyle="normal"
            android:textCursorDrawable="@null"
            android:id="@+id/txtSexProfile" android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_x="180px" android:layout_y="320px"
            android:singleLine="true" android:gravity="left"/>

    <EditText
            android:layout_width="220px"
            android:layout_height="30px"
            android:inputType="textPersonName"
            android:ems="10"
            android:textStyle="normal"
            android:textCursorDrawable="@null"
            android:id="@+id/txtMotherNameProfile" android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_x="180px" android:layout_y="362px"
            android:singleLine="true" android:gravity="left"/>

    <EditText
            android:layout_width="220px"
            android:layout_height="30px"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textStyle="normal"
            android:textCursorDrawable="@null"
            android:id="@+id/txtEmailProfile" android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_x="180px" android:layout_y="405px"
            android:singleLine="true" android:gravity="left"/>

    <EditText
            android:layout_width="220px"
            android:layout_height="30px"
            android:inputType="text|phone"
            android:ems="10"
            android:textStyle="normal"
            android:textCursorDrawable="@null"
            android:id="@+id/txtPhoneProfile" android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_x="180px" android:layout_y="445px"
            android:singleLine="true" android:gravity="left"/>

    <EditText
            android:layout_width="220px"
            android:layout_height="80px"
            android:inputType="textMultiLine|textCapSentences|textPostalAddress"
            android:scrollbars="vertical"
            android:ems="10"
            android:textStyle="normal"
            android:textCursorDrawable="@null"
            android:id="@+id/txtAddressProfile" android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_x="180px" android:layout_y="490px"
            android:lines="3" android:gravity="left"/>
    <Button
            android:id="@+id/btn_OkProfile"
            android:background="@android:color/transparent"
            android:layout_width="210px"
            android:layout_height="50px"
            android:layout_x="135px" android:layout_y="605px"/>

</AbsoluteLayout>