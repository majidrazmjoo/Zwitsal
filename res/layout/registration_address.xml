<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:background="@drawable/registration"
                android:layout_height="fill_parent" >
    <TextView
            android:layout_width="100px"
            android:layout_height="25px"
            android:text="Alamat:"
            android:id="@+id/txtTitleAddress" android:layout_x="210px" android:layout_y="400px"
            android:textAlignment="center" android:textColor="@android:color/black" android:textSize="20px"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="290px"
            android:layout_height="120px"
            android:minLines="3"
            android:inputType="textMultiLine|textCapSentences|textPostalAddress"
            android:ems="10"
            android:textCursorDrawable="@null"
            android:id="@+id/txtAddress" android:background="@android:color/darker_gray"
            android:textStyle="normal" android:textColor="#000000"
            android:layout_x="100px" android:layout_y="425px"
            android:gravity="left"/>
    <Button
            android:id="@+id/btn_OkAddress"
            android:background="@android:color/transparent"
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_x="170px" android:layout_y="560px"/>

</AbsoluteLayout>