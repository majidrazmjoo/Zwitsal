<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/langkahALayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/photo_landing">

    <Button
            android:id="@+id/btn_BackPhotoLanding"
            android:background="@android:color/transparent"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginTop="0px" android:layout_marginLeft="0px"/>

    <Button
            android:id="@+id/btn_PhotoLandingUpload"
            android:background="@android:color/transparent"
            android:layout_width="200px"
            android:layout_height="160px"
            android:layout_marginTop="300px" android:layout_marginLeft="140px"/>
    <Button
            android:id="@+id/btn_PhotoLandingGallery"
            android:background="@android:color/transparent"
            android:layout_width="200px"
            android:layout_height="130px"
            android:layout_marginTop="490px" android:layout_marginLeft="140px"/>


</RelativeLayout>